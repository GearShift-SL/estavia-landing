---
import ConsultingHero from '~/components/consulting/ConsultingHero.astro';
import ConsultingFeatures from '~/components/consulting/ConsultingFeatures.astro';
import ConsultingBenefits from '~/components/consulting/ConsultingBenefits.astro';
import ConsultingCaseStudies from '~/components/consulting/ConsultingCaseStudies.astro';
